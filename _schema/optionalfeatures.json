{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "optionalfeatures.json",
	"version": "1.10.1",
	"title": "Optional Features",
	"type": "object",
	"definitions": {
		"prerequisite": {
			"$ref": "util.json#/definitions/prerequisite"
		},
		"featureType": {
			"type": "array",
			"items": {
				"$ref": "util.json#/definitions/dataOptionalfeatureType"
			},
			"uniqueItems": true
		},
		"optionalfeature": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"prerequisite": {
					"$ref": "#/definitions/prerequisite"
				},
				"entries": {
					"type": "array",
					"items": {
						"$ref": "entry.json"
					}
				},
				"previousVersion": {
					"type": "object",
					"properties": {
						"name": {
							"type": "string"
						},
						"source": {
							"type": "string"
						}
					},
					"required": [
						"name",
						"source"
					],
					"additionalProperties": false
				},
				"source": {
					"type": "string"
				},
				"page": {
					"type": "integer"
				},
				"featureType": {
					"oneOf": [
						{
							"$ref": "#/definitions/featureType"
						},
						{
							"type": "array",
							"items": {
								"$ref": "#/definitions/featureType"
							}
						}
					]
				},
				"otherSources": {
					"$ref": "util.json#/definitions/otherSources"
				},
				"srd": {
					"$ref": "util.json#/definitions/srd"
				},
				"isClassFeatureVariant": {
					"type": "boolean"
				},
				"additionalSpells": {
					"$ref": "util.json#/definitions/additionalSpellsArray"
				},
				"languageProficiencies": {
					"$ref": "util.json#/definitions/languageProficiencies"
				},
				"skillProficiencies": {
					"$ref": "util.json#/definitions/skillProficiencies"
				},
				"weaponProficiencies": {
					"$ref": "util.json#/definitions/weaponProficiencies"
				},
				"armorProficiencies": {
					"$ref": "util.json#/definitions/armorProficiencies"
				},
				"toolProficiencies": {
					"$ref": "util.json#/definitions/toolProficiencies"
				},
				"skillToolLanguageProficiencies": {
					"$ref": "util.json#/definitions/skillToolLanguageProficiencies"
				},
				"proficiencyTags": {
					"$ref": "util.json#/definitions/proficiencyTags"
				}
			},
			"required": [
				"name",
				"entries",
				"source",
				"featureType"
			],
			"additionalProperties": false
		}
	},
	"properties": {
		"optionalfeature": {
			"type": "array",
			"items": {
				"$ref": "#/definitions/optionalfeature"
			}
		}
	},
	"additionalProperties": false
}
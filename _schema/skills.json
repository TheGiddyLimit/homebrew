{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "skills.json",
	"version": "1.0.1",
	"type": "object",
	"definitions": {
		"skill": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"source": {
					"type": "string"
				},
				"page": {
					"$ref": "util.json#/definitions/page"
				},
				"srd": {
					"$ref": "util.json#/definitions/srd"
				},
				"basicRules": {
					"$ref": "util.json#/definitions/basicRules"
				},
				"entries": {
					"type": "array",
					"items": {
						"$ref": "entry.json"
					}
				}
			},
			"required": [
				"name",
				"source",
				"entries"
			],
			"additionalProperties": false
		}
	},
	"properties": {
		"skill": {
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"$ref": "#/definitions/skill"
			}
		}
	},
	"required": [
		"skill"
	],
	"additionalProperties": false
}
{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "variantrules.json",
	"version": "1.1.3",
	"title": "RulesArray",
	"type": "object",
	"properties": {
		"variantrule": {
			"type": "array",
			"uniqueItems": true,
			"items": {
				"$ref": "#/definitions/variantrule"
			}
		}
	},
	"additionalProperties": false,
	"required": [
		"variantrule"
	],
	"definitions": {
		"variantrule": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"type": {
					"type": "string"
				},
				"entries": {
					"type": "array",
					"items": {
						"$ref": "entry.json"
					}
				},
				"source": {
					"type": "string"
				},
				"page": {
					"$ref": "util.json#/definitions/page"
				},
				"ruleType": {
					"description": "O: Optional\n V: Variant\n VO: Variant Optional\n VV: Variant Variant",
					"type": "string",
					"enum": [
						"O",
						"V",
						"VO",
						"VV"
					]
				},
				"srd": {
					"$ref": "util.json#/definitions/srd"
				},
				"additionalSources": {
					"$ref": "util.json#/definitions/additionalSources"
				},
				"foundryImg": {
					"$ref": "util.json#/definitions/foundryImg"
				}
			},
			"required": [
				"name",
				"entries",
				"source"
			],
			"additionalProperties": false
		}
	}
}
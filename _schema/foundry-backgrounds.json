{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "foundry-backgrounds.json",
	"version": "1.1.0",
	"type": "object",
	"properties": {
		"backgroundFeature": {
			"type": "array",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"source": {
						"type": "string"
					},
					"backgroundName": {
						"type": "string"
					},
					"backgroundSource": {
						"type": "string"
					},
					"system": {
						"$ref": "util.json#/$defs/foundrySystemObject"
					},
					"flags": {
						"$ref": "util.json#/$defs/foundryFlagsObject"
					},
					"effects": {
						"$ref": "util.json#/$defs/foundryEffectsArray"
					}
				},
				"required": [
					"name",
					"source",
					"backgroundName",
					"backgroundSource"
				],
				"additionalProperties": false
			}
		}
	},
	"additionalProperties": false
}
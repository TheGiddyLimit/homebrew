{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "tables.json",
	"version": "1.0.1",
	"type": "object",
	"properties": {
		"table": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"source": {
						"type": "string"
					},
					"page": {
						"type": "integer"
					},
					"otherSources": {
						"$ref": "util.json#/definitions/otherSources"
					},
					"chapter": {
						"type": "object",
						"properties": {
							"name": {
								"type": "string"
							},
							"ordinal": {
								"type": "object",
								"properties": {
									"type": {
										"type": "string",
										"enum": [
											"chapter",
											"appendix",
											"part",
											"episode"
										]
									},
									"identifier": {
										"type": [
											"integer",
											"string"
										]
									}
								},
								"additionalProperties": false,
								"required": [
									"type",
									"identifier"
								]
							},
							"index": {
								"type": "integer"
							}
						}
					},
					"caption": {
						"type": "string"
					},
					"style": {
						"type": "string"
					},
					"colLabels": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"colStyles": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"rowLabels": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"rowStyles": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"rows": {
						"type": "array",
						"items": {
							"anyOf": [
								{
									"type": "array",
									"items": {
										"$ref": "entry.json"
									}
								},
								{
									"$ref": "entry.json#/definitions/entryTableRow"
								}
							]
						}
					},
					"footnotes": {
						"type": "array",
						"items": {
							"$ref": "entry.json"
						}
					},
					"data": {
						"type": "object"
					},
					"intro": {
						"description": "Primarily for homebrew use.",
						"type": "array",
						"items": {
							"$ref": "entry.json"
						}
					},
					"outro": {
						"description": "Primarily for homebrew use.",
						"type": "array",
						"items": {
							"$ref": "entry.json"
						}
					}
				},
				"required": [
					"name",
					"source",
					"rows"
				],
				"additionalProperties": false
			}
		}
	},
	"additionalProperties": false
}
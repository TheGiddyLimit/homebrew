{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "foundry-races.json",
	"version": "1.0.2",
	"type": "object",
	"properties": {
		"raceFeature": {
			"type": "array",
			"uniqueItems": true,
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"source": {
						"type": "string"
					},
					"raceName": {
						"type": "string"
					},
					"raceSource": {
						"type": "string"
					},
					"data": {
						"$ref": "util.json#/definitions/foundryDataObject"
					},
					"flags": {
						"$ref": "util.json#/definitions/foundryFlagsObject"
					},
					"effects": {
						"type": "array",
						"items": {
							"$ref": "util.json#/definitions/foundryEffectObject"
						}
					}
				},
				"required": [
					"name",
					"source",
					"raceName",
					"raceSource"
				],
				"additionalProperties": false
			}
		}
	},
	"required": [
		"raceFeature"
	],
	"additionalProperties": false
}
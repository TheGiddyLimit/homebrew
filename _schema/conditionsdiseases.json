{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "conditionsdiseases.json",
	"version": "1.1.9",
	"type": "object",
	"definitions": {
		"conditionDisease": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"entries": {
					"type": "array",
					"items": {
						"$ref": "entry.json"
					}
				},
				"source": {
					"type": "string"
				},
				"page": {
					"$ref": "util.json#/definitions/page"
				},
				"srd": {
					"$ref": "util.json#/definitions/srd"
				},
				"basicRules": {
					"$ref": "util.json#/definitions/basicRules"
				},
				"hasFluff": {
					"type": "boolean"
				},
				"hasFluffImages": {
					"type": "boolean"
				},
				"color": {
					"description": "For homebrew use only; HTML hex color code this source should use when displayed on the DM Screen.\ne.g. \"ff00ff\"",
					"type": "string",
					"pattern": "^([a-fA-F0-9]{6}|[a-fA-F0-9]{3})$"
				},
				"fluff": {
					"description": "This is intended to be used for Homebrew only - site data should include a fluff file per source",
					"$ref": "util.json#/definitions/fluffObject"
				},
				"foundryData": {
					"$ref": "util.json#/definitions/foundryDataObject"
				},
				"foundryFlags": {
					"$ref": "util.json#/definitions/foundryFlagsObject"
				},
				"foundryEffects": {
					"$ref": "util.json#/definitions/foundryEffectsArray"
				},
				"foundryImg": {
					"$ref": "util.json#/definitions/foundryImg"
				}
			},
			"required": [
				"name",
				"entries",
				"source",
				"page"
			],
			"additionalProperties": false
		}
	},
	"properties": {
		"condition": {
			"type": "array",
			"uniqueItems": true,
			"items": {
				"$ref": "#/definitions/conditionDisease"
			}
		},
		"disease": {
			"type": "array",
			"uniqueItems": true,
			"items": {
				"$ref": "#/definitions/conditionDisease"
			}
		},
		"status": {
			"type": "array",
			"uniqueItems": true,
			"items": {
				"$ref": "#/definitions/conditionDisease"
			}
		}
	},
	"required": [
		"condition",
		"disease",
		"status"
	],
	"additionalProperties": false
}